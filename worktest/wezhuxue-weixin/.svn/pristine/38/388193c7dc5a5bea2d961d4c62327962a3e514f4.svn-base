<script type="text/javascript" src="js/zepto.min.js" ></script>
<script type="text/javascript">
    $(function(){
        var UrlData=window.location.search;
        var locationData={};//接收链接地址传输的数据
        var mainData={};//助学团详情json
        var isIn;
        
        (UrlData==='')&&(true,locationData='nullObject') || (UrlData!='') && (true,locationData=pub.StrToJOON(UrlData));
        //判断有没有获取数据 ps:获取到了去读数据，没有获取到提示没有获取到
        (locationData === 'nullObject')&&(true,(function(){
            $('#oDiv').show();
            pub.cs('没有获取到数据！');
        })()) || (locationData!='nullObject')&&(true,function(){
            getGroupDetail();//获取帮助所有帮助提升身价的小伙伴
        }());//判断有没有获取数据 end
        
        //获取帮助提升身价小伙伴列表的方法
        function getGroupDetail(){
            var datas ={'version':'1.0','system':'weixin','token':'','objId':'HelpStuGroupVO','method':'/finance/group/detail','@userId':''+locationData.userId+'','@groupId':''+locationData.groupId+''};
            $.ajax({
                dataType:'jsonp',
                url:pub.jsonPApiT,
                data:datas,
                jsonp:'callback',
                success:function(jsonData){
                    mainData=eval(jsonData);
					if(mainData.code=='6666'){
                        $('#groupAvatar,#yjr,#ljbz,#ljzx,#groupBrief,#userCoupon').html('');//清空现有数据
                        $('.firstheading').html(mainData.data.groupName+'邀请你一起助学');
                        $('#groupAvatar').attr('src', mainData.data.groupAvatar);
                        $('#yjr').html(mainData.data.userNum);
                        $('#ljbz').html(mainData.data.helpNum);
                        $('#ljzx').html((mainData.data.money/10000).toFixed(2)+"万");
                        $('#groupBrief').html(mainData.data.groupDescription);
                        var hrs = mainData.data.helpRecords;//获取投资记录
                        if(hrs==undefined){
                            $('#helpRecords').append('<a href="javascript:void(0);" class="spaceone clearfloat">'+
                                    '<div class="textSet fl">'+
                                        '<h3>暂无投资记录</h3>'+
                                    '</div>'+
                                '</a>');
                            //return false;
                        }else{
                            for(var i=0;i<hrs.length;i++){
                                $('#helpRecords').append('<a href="javascript:void(0);" class="spaceone clearfloat">'+
                                    '<div class="guyImgSet fl">'+
                                        '<img src="'+hrs[i].userAvatar+'">'+
                                    '</div>'+
                                    '<div class="textSet fl">'+
                                        '<h3>'+hrs[i].userName+' </h3>'+
                                        '<h4>已为'+hrs[i].helpNum+'名大学生筹集学费'+hrs[i].money+'元</h4>'+
                                    '</div>'+
                                '</a>');
                            }
                        }
                        $('#userCoupon').html(mainData.data.groupName+'，送你5000元助学体验券');
                        if (mainData.data.isInOne == '1' || mainData.data.inFlag == '1') {
                        	isIn = "1";
                        	/* $('#oDiv').show();
	                        pub.cs('您已加入助学团，不可重复领取哦！');
	                        $("button").attr('disabled',true); */
	                    }
					}else{
						$('#oDiv').show();
                        pub.cs(mainData.msg);
                        $("button").attr('disabled',true);
					}
                },
            });
        };//获取帮助提升身价小伙伴列表的方法 end
        $('button').click(function(){
        	if("1"==isIn){
        		$('#oDiv').show();
                pub.cs('您已加入助学团，不可重复领取哦！');
                return false;
        	}
        	var datas ={'version':'1.0','system':'weixin','token':'','objId':'HelpStuGroupVO','method':'/finance/group/addIn','@userId':''+locationData.userId+'','@groupId':''+locationData.groupId+''};
            $.ajax({
                dataType:'jsonp',
                url:pub.jsonPApiT,
                data:datas,
                jsonp:'callback',
                success:function(jsonData){
                    mainData=eval(jsonData);
    				if(mainData.code=='6666'){
                        window.location.href='http://wx.wezhuxue.com/wezhuxue-weixin/views/zxt_stu/yiBuy.html?userId='+locationData.userId+'&productId='+mainData.data.productId+'&couponId='+mainData.data.code+'&openId='+locationData.openId+'&shareUserId='+locationData.shareUserId;
    				}else{
    					$('#oDiv').show();
                        pub.cs(mainData.msg);
    				}
                },
            });
        });
	});
</script>